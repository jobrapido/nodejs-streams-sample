{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [{
        "name": "Debug main",
        "type": "node",
        "request": "launch",
        "sourceMaps": true,
        "cwd": "${workspaceRoot}",
        "protocol": "inspector",
        "args": [
          "${workspaceRoot}/src/main.ts",
        ],
        "runtimeArgs": [
          "--nolazy",
          "-r",
          "ts-node/register",
        ],
        "env": {
          "TS_NODE_FILES": "true",
          "TS_NODE_PROJECT": "./tsconfig.json",
          "NODE_ENV": "dev",
          "BUFFER_SIZE": "5",
        },
      },
      {
        "name": "Debug ts-node",
        "type": "node",
        "request": "launch",
        "sourceMaps": true,
        "cwd": "${workspaceRoot}",
        "protocol": "inspector",
        "args": [
          "${workspaceRoot}/${relativeFile}",
        ],
        "runtimeArgs": [
          "--nolazy",
          "-r",
          "ts-node/register",
        ],
      },
      {
        "name": "Debug current test",
        "type": "node",
        "request": "launch",
        "program": "${workspaceRoot}/node_modules/.bin/jest",
        "args": [
          "${relativeFile}"
        ],
        "cwd": "${workspaceRoot}",
        "protocol": "inspector"
      }
    ]
  }